{
  "compilerOptions": {
    "outDir": "dist", // <— compiled output goes here
    "rootDir": "src", // <— where your source files live
    "target": "ESNext",
    "module": "none",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
